{
  "name": "xendit-node",
  "version": "0.3.0",
  "description": "NodeJS client for Xendit API",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/**/*.test.js",
    "test:integration": "node integration_test",
    "lint": "eslint index.js ./src/**/*.{js,ts}",
    "format": "prettier --config .prettierrc --write index.js ./src/**/*.{js,json,ts}",
    "gentoc": "markdown-toc -i README.md",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xendit/xendit-node.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,json,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint",
      "git add"
    ],
    "README.md": [
      "markdown-toc -i",
      "git add"
    ]
  },
  "keywords": [
    "xendit",
    "api",
    "client",
    "node"
  ],
  "author": "Stanley Nguyen <stanley@xendit.co>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/xendit/xendit-node/issues"
  },
  "homepage": "https://github.com/xendit/xendit-node#readme",
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.1.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "markdown-toc": "^1.2.0",
    "mocha": "^6.2.0",
    "nock": "^11.3.5",
    "np": "^5.1.2",
    "prettier": "^1.18.2",
    "typescript": "^3.7.4"
  }
}
